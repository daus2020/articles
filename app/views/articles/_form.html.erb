<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> imposible crear artículo por:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title,  "Título", style: "display: block" %>
    <%= form.text_field :title, class:"mb-2" %>
  </div>

  <div>
    <%= form.label :body, "Artículo", style: "display: block" %>
    <%= form.text_area :body, class:"mb-2" %>
  </div>

  <div>
    <%= form.submit "Enviar edición", class: "btn btn-outline-primary hover-btn mb-3" %>
  </div>
<% end %>
